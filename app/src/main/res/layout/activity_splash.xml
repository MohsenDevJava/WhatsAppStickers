<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/ggreen"
        tools:context="com.mscompany.stickersms.SplashActivity">
    <ImageView android:layout_width="200dp"
               android:layout_height="200dp"
               android:id="@+id/imageView"
               android:src="@drawable/magic_image"
               android:layout_centerHorizontal="true"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="Photo Editor Application"
              android:textColor="@color/gpurple"
              android:textAlignment="center"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:layout_marginTop="30dp"
              android:padding="8dp"
              android:textSize="20sp"
              android:textStyle="bold"
              android:layout_below="@id/imageView"/>
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idBtnPic"
            android:layout_alignParentBottom="true"
            android:backgroundTint="#3F51B5"
            android:padding="15dp"
            android:text="Select Image to edit"
            android:textAllCaps="false"/>


</RelativeLayout>